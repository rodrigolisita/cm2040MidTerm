<h2><%=userName%>, here you can update the Blog Post</h2>

<form action="/blog/<%= post.id %>/update" method="POST"> 
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= post.title %>" required> <br><br>

    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= post.content %></textarea><br><br>
    <p>Current Author: <%=post.author %></p>
    <p>Current Contributors: <%=post.author2 %></p>
    

    <div>
        <input type="hidden" id="author" name="author" value="<%= userName %>" /> 
        <p>New Contributor: <%= userName %></p> 
    </div>
    
    <label for="status">Status:</label>
    <select id="status" name="status">
        <option value="published" <%= post.status === 'published' ? 'selected' : '' %>>Published</option>
        <option value="draft" <%= post.status === 'draft' ? 'selected' : '' %>>Draft</option>
    </select><br><br>

    
 
    
    
    
    
    
    

    <button type="submit">Update Post</button>
</form>

