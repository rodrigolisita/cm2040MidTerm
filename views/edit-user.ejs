<h1>Edit User</h1>

<form method="POST" action="/users/edit-user/<%= user.user_id %>">
    <label for="user_name">User Name:</label>
    <input type="text" id="user_name" name="user_name" value="<%= user.user_name %>" required>
    
    <label for="email_address">Email Address:</label>
    <input type="email" id="email_address" name="email_address" value="<%= user.email_address %>" required>

    <button type="submit">Update User</button>
</form>

<form action="/users/delete-user/<%= user.user_id %>" method="POST">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete User</button>
</form> 
