<article class="post">
  <header>
    <h1><%= post.title %></h1>
    <p class="date">Created by <%= post.author %> on <%= post.createdAt %> </p>
    <% if (coAuthors && coAuthors.length > 0) { %>
      <p class="date">Contributors:
        <% coAuthors
          .sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at)) // Sort in descending order
          .forEach(coAuthor => { %>
            <%= coAuthor.author %> (Date: <%= new Date(coAuthor.updated_at).toLocaleString() %>)<%= coAuthor !== coAuthors[coAuthors.length - 1] ? ', ' : '' %>
        <% }) %>
      </p>
    <% } %> 
                    

  </header>
  
  <% if (post.status === 'published') { %>
  <div class="post">
    <div class="post-content">
      <div class="post">
        <p>
          <%- post.content.replace(/\n/g, '<br>') %>  
        </p> 
      </div>
    </div>
    
    <div class="likes-section">
      <p>ğŸ‘€  Views: <%= views %>. ğŸ‘ Likes: <%= likes || 0 %></p>
      <form method="POST" action="/post/<%= post.id %>/like">
        <button type="submit">ğŸ‘Like</button>
      </form>
    </div>

    <section class="comments">
      <div class="post">
        <h3>Comments: <%=comments.length%></h3>
        <% if (comments.length > 0) { %>
        <ul>
          <% comments
            .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)) // Sort by createdAt DESC
            .forEach(comment => { %>
            <li>
              <p><strong><%= comment.author %>:</strong> <%= comment.content %> <span style="float: right;"><%= comment.createdAt %></span></p>
            </li>
          <% }); %>          
          </ul>
        <% } else { %>
          <p>No comments yet.</p>
        <% } %>
      </div>
    </section>
  </div>
  <div class="post">
    <h1>Add a Comment</h1>
    <form method="POST" action="/post/<%= post.id %>/comments">
      <div class="post">
        <label for="author">Name:</label>
        <input type="text" id="author" name="author" required />
      </div>
      <div class="post">
        <div class="post-content">
          <label for="content">Comment:</label>
          <textarea id="content" name="content" rows="4" required style="width: 100%;"></textarea>
        </div>
        <button type="submit">Submit</button>
      </div>
    </form>
  </div>
  <% } else { %>
    <p>This post is a draft and not available for public viewing.</p>
    <p class="like-count">Likes: <%= likes || 0 %> / Comments: <%=comments.length%> / Views: <%= views %> </p>
    <div class="post-content">
      <div class="post">
      <p>
        <%- post.content.replace(/\n/g, '<br>') %>  
      </p> 
    </div>
      <section class="comments">
        <h3>Comments: <%=comments.length%></h3>
        <% if (comments.length > 0) { %>
          <ul>
            <% comments
            .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)) // Sort by createdAt DESC
            .forEach(comment => { %>
            <li>
              <p><strong><%= comment.author %>:</strong> <%= comment.content %> <span style="float: right;"><%= comment.createdAt %></span></p>
            </li>
          <% }); %>          
          </ul>
        <% } else { %>
          <p>No comments yet.</p>
        <% } %>
      </section>
    </div>
    <footer>
      <h3><a href="/blog/<%= post.id %>/update">Edit: <%= post.title %></a></h3> 
      <a href="/blog">Back to Authors Page</a> 
    </footer>
  <% } %>
</article>