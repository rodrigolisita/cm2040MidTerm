<div class="container">
  <% if (blogPosts && blogPosts.length > 0) { %>
    <h2>Published Blog Posts</h2>

    <div class="sort-options">
      <span>Sort by:</span>
      <a href="/?sort=createdAt" class="<%= sortOption === 'createdAt' ? 'active' : '' %>">Date</a>
      <a href="/?sort=updatedAt" class="<%= sortOption === 'updatedAt' ? 'active' : '' %>">Last Update</a>
      <a href="/?sort=title" class="<%= sortOption === 'title' ? 'active' : '' %>">Title</a>
    </div>

    <% blogPosts.forEach(post => { %>
      <article class="post">
        <h3><a href="/post/<%= post.id %>"><%= post.title %></a></h3> 
        <div class="date">Created: <%= post.createdAt %></div> 
        <div class="date">Updated: <%= post.updatedAt %></div>
        <div class="content">
          <%- post.content %>
        </div>
      </article>
    <% }); %>
  <% } else { %>
    <p>No published blog posts yet.</p>
  <% } %>
</div>
